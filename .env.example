# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here

# MongoDB Configuration (bot state)
MONGO_USERNAME=admin
MONGO_PASSWORD=your_mongo_password_here
MONGO_NAME=freebot

# SMTP Configuration (optional, for backend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Sigur Integration (optional, for backend)
SIGUR_HOST=https://sigur.example.com
SIGUR_USERNAME=sigur_user
SIGUR_PASSWORD=sigur_password

# AST Integration (optional, for backend)
AST_HOST=https://ast.example.com
AST_USERNAME=ast_user
AST_PASSWORD=ast_password

# CI/CD Variables (used in existing docker-compose.yml)
CI_ENVIRONMENT_NAME=dev
CI_TELEGRAM_TOKEN=${TELEGRAM_TOKEN}
CI_BACKEND_BASE_URL=http://freebotsigur-backend:8080
CI_MONGO_INITDB_ROOT_USERNAME=${MONGO_USERNAME}
CI_MONGO_INITDB_ROOT_PASSWORD=${MONGO_PASSWORD}
CI_MONGO_INITDB_DATABASE=${MONGO_NAME}
CI_MONGO_HOST=mongodb
CI_MONGO_PORT=27017
CI_REQUEST_TIMEOUT=10
CI_MONGO_IMAGE=mongo:7
CI_EXTERNAL_PORT=8081
CI_MONGO_EXTERNAL_PORT=27018
CI_REGISTRY_IMAGE=freebot-service
CI_COMMIT_SHORT_SHA=latest
